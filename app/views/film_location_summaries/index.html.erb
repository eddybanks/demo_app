<section class="index-section" id="film-location-summaries-index">
  <%= render 'layouts/table_search_bar' %>
  <table class="table table-striped table-sm table-hover table-responsive summary-table">
    <thead class="thead-inverse">
      <tr>
        <th class="col1"><%= sort_link @q, :id, '#' %></th>
        <th class="col2"><%= sort_link @q, :title, 'Title' %></th>
        <th class="col3"><%= sort_link @q, :release_year, 'Release year' %></th>
        <th class="col4"><%= sort_link @q, :locations, 'Locations' %></th>
        <th class="col5"><%= sort_link @q, :fun_facts, 'Fun facts' %></th>
        <th class="col6"><%= sort_link @q, :production_company, 'Production company' %></th>
        <th class="col7"><%= sort_link @q, :distributor, 'Distributor' %></th>
        <th class="col8"><%= sort_link @q, :director, 'Director' %></th>
        <th class="col9"><%= sort_link @q, :writer, 'Writer' %></th>
        <th class="col10"><%= sort_link @q, :actor1, 'Actor1' %></th>
        <th class="col11"><%= sort_link @q, :actor2, 'Actor2' %></th>
        <th class="col12"><%= sort_link @q, :actor3, 'Actor3' %></th>
      </tr>
    </thead>

    <tbody class="scrollable">
      <% @film_location_summaries.each do |film_location_summary| %>
        <tr>
          <th scope="row" class="col1"><%= film_location_summary.id %></td>
          <td class="col2"><%= film_location_summary.title %></td>
          <td class="col3"><%= film_location_summary.release_year %></td>
          <td class="col4"><%= film_location_summary.locations %></td>
          <td class="col5"><%= film_location_summary.fun_facts %></td>
          <td class="col6"><%= film_location_summary.production_company %></td>
          <td class="col7"><%= film_location_summary.distributor %></td>
          <td class="col8"><%= film_location_summary.director %></td>
          <td class="col9"><%= film_location_summary.writer %></td>
          <td class="col10 c5"><%= film_location_summary.actor1 %></td>
          <td class="col11 c5"><%= film_location_summary.actor2 %></td>
          <td class="col12 c5"><%= film_location_summary.actor3 %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= paginate @film_location_summaries %>
</section>
